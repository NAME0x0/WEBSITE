{
  "name": "website",
  "version": "1.0.0",
  "private": true,
  "description": "Personal search and productivity hub",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/styles/:dist/styles/ --style compressed",
    "build:js": "terser src/scripts/file1.js src/scripts/file2.js -o dist/scripts/main.js --compress --mangle",
    "minify:html": "html-minifier --input-dir src --output-dir dist --file-ext html --collapse-whitespace --remove-comments"
  },
  "dependencies": {
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "sass": "^1.69.5",
    "terser": "^5.24.0",
    "html-minifier": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
